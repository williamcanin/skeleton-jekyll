{
  "browserSync":{
    "proxy":{
      "target": "http://localhost"
    },
    "port": "3010",
    "baseDir": "./_site/"
  },
  "watch":[
    "_config.yml",
    "index.md",
    "_layouts/**/*.html",
    "_posts/**/*.md",
    "_includes/**/*.html",
    "_projects/**/*.md",
    "_data/**/*.yml",
    "_blog/**/*.html",
    "_sass/**/*.scss",
    "src/js/**/*.js"
  ],
  "sources":{
    "js":{
      "dir": "./src/js",
      "files": "./src/js/**/*.js"
    },
    "scss":{
      "dir": "./_sass",
      "files": "./_sass/**/*.scss"
    }
  },
  "assets":{
    "images":{
      "dir": "./assets/images",
      "files": "./assets/images/**/*"
    },
    "javascripts":{
      "dir": "./assets/js",
      "files": "./assets/js/**/*.js"
    }
  }
}
