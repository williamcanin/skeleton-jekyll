{
  "watch":[
    "_config.yml",
    "./index.md",
    "./_layouts/**/*.html",
    "./_posts/**/*.md",
    "./_pages/**/*.md",
    "./_includes/**/*.html",
    "./_projects/**/*.md",
    "./_data/**/*.yml",
    "./gulpfile.js",
    "./blog/**/*.html",
    "./*.md",
    "_sass/**/*.scss",
    "./src/js/**/*.js"
  ],
  "sources":{
    "js":{
      "dir": "./src/js",
      "files": "./src/js/**/*.js"
    }
  },
  "assets":{
    "images":{
      "dir": "./assets/images",
      "files": "./assets/images/**/*"
    },
    "javascripts":{
      "dir": "./assets/js",
      "files": "./assets/js/**/*.js"
    }
  }
}